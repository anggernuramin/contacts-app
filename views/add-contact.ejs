<section class="container home-contact pt-5">
  <div class="row">
    <div class="col-11 col-lg-6 mx-auto">
      <h2 class="mb-3">Form Add Contact</h2>
      <!-- Menampilkan error jika ada -->
      <% if (typeof errors != "undefined") { %>
      <ul class="list-errors">
        <div class="alert alert-danger" role="alert">
          <% errors.forEach(item => { %>
          <li>â€¢ <%= item.msg %></li>
          <% }) %>
        </div>
      </ul>
      <% } %>
      <!-- Maka kita harus handle saat form dipost dengan route app.post("/contact",(req,res)) -->
      <!-- Dan pastikan di tiap input mempunyai atribut name="", karena digunakan untuk menyimpan data input yang akan ditangkap oleh express -->
      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input
            type="tel"
            class="form-control"
            id="nohp"
            name="nohp"
            placeholder="08*******"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="name@example.com"
          />
        </div>
        <div class="mt-4 d-flex gap-3 justify-content-end">
          <a href="/contact">
            <button type="button" class="btn btn-danger bg-danger">Cancel</button>
          </a>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</section>
