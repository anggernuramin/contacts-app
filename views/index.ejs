<section class="container home-contact ">
  <div class="row ">
    <div class="col-11 col-lg-9 mx-auto">
      <h2 class="fs-1 mb-1 fw-semibold">View all your contacts in one place.</h2>
      <p class="mb-3">In our Contacts Manager application, you can search by name, making it easier to navigate the list and find specific contacts quickly. </p>
      <table class="table ">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">No HandPhone</th>

            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
          <% contacts.map((item,index)=> { %>
            <tr >
              <th class="py-3" scope="row"><%- index+1 %></th>
              <td class="py-3"><%- item?.name %></td>
              <td class="py-3"><%- item?.nohp %></td>
              <td class="d-flex  gap-3 py-3 mt-1 ">

                <span class="badge text-bg-success bg-success d-flex gap-2">
                  <i class="bi bi-info-circle"></i>
                  Detail</span>
                <span class="badge text-bg-danger bg-danger d-flex gap-2">
                  <i class="bi bi-trash3-fill"></i>
                  Delete</span><span class="badge text-bg-warning bg-warning d-flex gap-2">
                    <i class="bi bi-arrow-repeat"></i>
                  Update</span>

              </td>
            </tr>

            <% }) %>
        </tbody>
      </table>
    </div>

  </div>
</section>

